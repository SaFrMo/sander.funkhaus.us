{
    "extends": "vue",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "jsx": "false"
    },
    "rules": {
        "indent"                        : ["error", 4],
        "space-in-parens"               : ["error", "always"],
        "space-before-blocks"           : ["error", "never"],
        "space-before-function-paren"   : ["error", "never"],
        "padded-blocks"                 : "off",
        "keyword-spacing"               : "off",
        "quotes"                        : "off",
        "no-new"                        : "off",
        "one-var"                       : "off",
        "prefer-const"                  : "off"
    }
}
